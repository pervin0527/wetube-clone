extend base

block content 
    if errorMessage 
        span=errorMessage 

    form(method="POST")
        input(type="text", name="title", maxlength=80, placeholder="Title", required)
        input(type="text", name="description", minlength=20, placeholder="Descrption", required)
        input(type="text", name="hashtags", placeholder="Hashtags separated by comma", required)
        input(type="submit", value="Upload video") 